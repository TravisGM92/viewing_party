<%= button_to 'Home', '/dashboard', method: :get %>
<h2><%= @movie_info[:movie].title %></h2>
<%= button_to "Create viewing party", "/movies/#{@movie_info[:movie].id}/party/new", method: :get %>
<h3>Vote average: <%= @movie_info[:movie].vote_average %></h3>
<h3>Run time: <%= @movie_info[:runtime]%></h3>
<h3>Genres: </h3><% @movie_info[:movie].genres.each do |genre| %>
  <%= genre %>
  <%end %>
<h3>Overview: <%= @movie_info[:movie].overview %></h3>
<p style="font-weight:bold;">Cast:</p>
<%@movie_info[:cast].each do |per| %>
  <% if per.character == "" %>
    <p><%= per.name %></p>
  <% else %>
    <p><%= per.name %> as <%= per.character %></p>
  <% end %>
<%end %>
<h3>Reviews: <%=@movie_info[:reviews].length %></h3>
<%@movie_info[:reviews].each do |rev| %>
  <p style="font-weight:bold;">Author: <%=rev.author %> </p>
  <p> Review: <%=rev.content %>
<%end %>
<h3>Recommendations</h3>
<% @movie_info[:recommendations].each do |recommendation| %>
  <p><%= recommendation.title %></p>
<% end %>
